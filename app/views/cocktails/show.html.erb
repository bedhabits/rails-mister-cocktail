<div class="container mt-5">
  <h1>Show page of </h1>

  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path "krzwfxwbwgvmgwvdhisd", height: 300, width: 400, crop: :fill %>')">
    <strong class="cocktail-name-card"><%= @cocktail.name %></strong>

    <ul class="unstyled">
      <li>
        <% @cocktail.doses.each do |dose| %>
          <%= "#{dose.description} - #{Ingredient.find(dose.ingredient_id).name}" %>
          <%= link_to " delete ingredient", cocktail_dose_path(@cocktail, dose), method: :delete, class: "btn-sm btn-outline-secondary" %>
        <% end %>
      </li>
    </ul>
  </div>

  <p class="mt-2" >
    <%= link_to "Back to cocktails", cocktails_path, class: "btn btn-outline-secondary"%>
    <%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-pramary", id: "adding" %>
  </p>

</div>
