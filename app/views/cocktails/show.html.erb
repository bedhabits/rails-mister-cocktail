<div class="container mt-5">
  <h1><%= @cocktail.name %></h1>

  <p>
    <%= image_tag "#{@cocktail.photo}", alt: "#{@cocktail.name}", width: 300 %>
  </p>

  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li>
      <%= "#{dose.description} - #{Ingredient.find(dose.ingredient_id).name}" %><%= link_to " delete ingredient", cocktail_dose_path(@cocktail, dose), method: :delete %>
    </li>
    <% end %>
  </ul>



  <!-- <ul>
    <li>
      <%= @cocktail.ingredient %>
    </li>
  </ul> -->

  <p>
    <%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail) %>
  </p>

  <p>
    <%= link_to "Back to cocktails list", cocktails_path %>
  </p>

</div>
